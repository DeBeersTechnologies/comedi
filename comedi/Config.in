	fi
fi

bool 'National Instruments boards' CONFIG_COMEDI_NI
if [ "$CONFIG_NI" = "y" ];then
	tristate 'AT-MIO E series' CONFIG_COMEDI_NI_ATMIO
	if [ "$CONFIG_PCI" = "y" ];then
		tristate 'PCI-MIO E series' CONFIG_COMEDI_NI_PCIMIO
